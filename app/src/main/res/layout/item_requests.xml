<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">
<androidx.cardview.widget.CardView
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  app:cardCornerRadius="8dp"
  app:contentPadding="16dp"
  android:layout_margin="16dp">
  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="24dp"
    android:id="@+id/req_name"
    android:text="Yashwant"/>
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/req_blood"
    android:textStyle="bold"
    android:text="A+"/>
    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/req_phone"
      android:text="7387328472"/>
    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/req_place"
      android:text="Subhash Nagar"/>
    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/req_message"
      android:text="fdfhskfhksfshfdksdhkd"
      android:maxEms="100"/>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Has Donated to:"/>
        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="2"
          android:paddingStart="16dp"
          android:textSize="24dp"/>
      </LinearLayout>

      <ImageButton
        android:id="@+id/req_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:src="@drawable/ic_call_black_24dp" />
    </LinearLayout>
  </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>